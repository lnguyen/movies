= form_for @movie do |f|
  -if @movie.errors.any?
    #error_explanation
      %h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
      %ul
        - @movie.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :release
    = f.datetime_select :release
  .field
    = f.label :production_company
    = f.text_field :production_company
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
